<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_small_5"
    android:paddingBottom="@dimen/padding_small_5"
    android:background="@color/white"
    android:paddingLeft="@dimen/padding_medium_10"
    android:paddingRight="@dimen/padding_medium_10"
    android:layout_marginBottom="@dimen/padding_medium_10">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_id"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/padding_small_5"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_shipping"
            android:layout_toLeftOf="@+id/order_viewdetails"
            android:layout_marginBottom="@dimen/padding_small_5"
            android:layout_below="@+id/order_id"
            android:layout_alignParentLeft="true"
            android:textColor="@color/light_grey"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_price"
            android:layout_marginBottom="@dimen/padding_small_5"
            android:layout_below="@+id/order_shipping"
            android:layout_alignParentLeft="true"
            android:textColor="@color/light_grey"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_date"
            android:layout_marginBottom="@dimen/padding_small_5"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_viewdetails"
            android:layout_marginBottom="@dimen/padding_small_5"
            android:layout_below="@+id/order_date"
            android:text="@string/view_details"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorAccent"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

</RelativeLayout>